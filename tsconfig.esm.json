{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ES2021",
		"outDir": "./dist/esm",
		"declaration": true,
		"declarationMap": false,
		"emitDeclarationOnly": false,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
